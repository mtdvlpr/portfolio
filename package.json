{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "author": "Manoah Tervoort",
  "description": "The developer portfolio of Manoah Tervoort.",
  "scripts": {
    "dev": "nuxt",
    "start": "nuxt start",
    "generate": "nuxt generate && ./build.sh",
    "lint:js": "eslint --fix --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --fix --ignore-path .gitignore",
    "lint:prettier": "prettier --write --list-different --ignore-path .gitignore .",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "prepare": "husky install",
    "audit": "lighthouse-badges --urls https://www.manoahtervoort.tk -o lighthouse_results"
  },
  "lint-staged": {
    "*.{js, vue}": "eslint --fix --cache",
    "*.{css,scss,sass,html,vue}": "stylelint --fix --cache",
    "*.**": "prettier --write --list-different --ignore-path .gitignore --ignore-unknown"
  },
  "dependencies": {
    "@nuxtjs/pwa": "^3.3.5",
    "core-js": "^3.21.1",
    "nuxt": "^2.15.8",
    "nuxt-precompress": "^0.5.9",
    "nuxt-protected-mailto": "^0.0.12",
    "nuxt-webfontloader": "^1.1.0",
    "sharp": "^0.30.3",
    "vue": "^2.6.14",
    "vue-server-renderer": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "vuetify": "^2.6.4",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@aceforth/nuxt-netlify": "^1.1.0",
    "@babel/eslint-parser": "^7.17.0",
    "@mdi/js": "^6.6.96",
    "@nuxtjs/eslint-config": "^8.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/imagemin": "^1.0.1",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "@nuxtjs/vuetify": "^1.12.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-nuxt": "^3.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "lighthouse-badges": "^1.1.20",
    "lint-staged": "^12.3.7",
    "postcss-html": "^1.3.0",
    "prettier": "^2.6.0",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^25.0.0"
  }
}
